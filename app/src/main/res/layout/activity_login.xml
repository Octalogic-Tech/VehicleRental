<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".LoginActivity">




    <LinearLayout
        android:id="@+id/ll_appHeader"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_appLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_applogo" />

        <TextView
            android:id="@+id/tv_appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/passion_one"
            android:text="@string/app_name"
            android:textColor="@color/colorTextDark"
            android:textSize="30sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_loginHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondaryDark"
        android:gravity="center"
        android:padding="10dp"
        android:text="LOGIN"
        android:textSize="20sp"
        android:textColor="@color/colorTextLight"
        app:layout_constraintTop_toBottomOf="@+id/ll_appHeader" />

    <LinearLayout
        android:id="@+id/ll_loginForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_loginHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/background_et"
            android:textColorHint="@color/colorSecondaryDark"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:elevation="2dp"
            android:translationZ="2dp" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/background_et"
            android:textColorHint="@color/colorSecondaryDark"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:elevation="2dp"
            android:translationZ="2dp" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:textColor="@color/colorTextLight"
            android:background="@drawable/background_btn"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:translationZ="8dp" />
        <TextView
            android:id="@+id/tv_forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/colorTextDark"
            android:layout_margin="2dp" />
        <TextView
            android:id="@+id/tv_registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not a Registered User? Click Here"
            android:textColor="@color/colorTextDark"
            android:layout_margin="2dp"
            android:onClick="registerRedirect" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>