<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/ll_appHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_appLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_applogo" />

        <TextView
            android:id="@+id/tv_appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/passion_one"
            android:text="@string/app_name"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_loginHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondaryDark"
        android:gravity="center"
        android:padding="5dp"
        android:text="REGISTER"
        android:textSize="20sp"
        android:textColor="@color/colorTextLight"
        app:layout_constraintTop_toBottomOf="@+id/ll_appHeader" />

    <LinearLayout
        android:id="@+id/ll_registerForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_loginHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/et_background"
            android:textColorHint="@color/colorSecondaryDark"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:elevation="3dp"
            android:translationZ="3dp" />
        <EditText
            android:id="@+id/et_firstName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:background="@drawable/et_background"
            android:textColorHint="@color/colorSecondaryDark"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:elevation="3dp"
            android:translationZ="3dp" />
        <EditText
            android:id="@+id/et_lastName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:background="@drawable/et_background"
            android:textColorHint="@color/colorSecondaryDark"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:elevation="3dp"
            android:translationZ="3dp" />
        <EditText
            android:id="@+id/et_contact"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Contact"
            android:background="@drawable/et_background"
            android:textColorHint="@color/colorSecondaryDark"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:elevation="3dp"
            android:translationZ="3dp" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/et_background"
            android:textColorHint="@color/colorSecondaryDark"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:elevation="3dp"
            android:translationZ="3dp" />
        <EditText
            android:id="@+id/et_confirmPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint=" Confirm Password"
            android:background="@drawable/et_background"
            android:textColorHint="@color/colorSecondaryDark"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:elevation="3dp"
            android:translationZ="3dp" />
        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"
            android:textColor="@color/colorTextLight"
            android:background="@drawable/btn_background"
            android:layout_margin="10dp"
            android:elevation="6dp"
            android:translationZ="6dp" />
        <TextView
            android:id="@+id/tv_loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registered User? Click Here to Login"
            android:textColor="@color/colorTextDark"
            android:layout_margin="2dp"
            android:onClick="loginRedirect" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>